<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/round_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/textView"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="2dp"
        android:layout_centerVertical="true"
        app:civ_border_color="#9A7B4F"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="5dp"
        android:text="TaskName"
        android:textColor="#231709"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="Courier"/>

    <TextView
        android:id="@+id/materialsTextView"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/round_image"
        android:layout_toRightOf="@+id/round_image"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:textColor="#231709"
        android:textStyle= "bold|italic"
        android:fontFamily="Courier"/>


</RelativeLayout>